<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LostPet" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_orange</item>
        <item name="colorPrimaryVariant">@color/red_pink</item>
        <item name="colorOnPrimary">@color/light_pink</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/light_pink</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorAccent">@color/light_orange</item>
        <item name="actionBarStyle">@color/light_orange</item>
        <item name="actionBarItemBackground">@color/light_orange</item>
    </style>
</resources>