<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btn_add"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/selector_button_background_orange"
        android:text="@string/add"
        android:textColor="@color/selector_white_alpha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.06" />

    <Button
        android:id="@+id/btn_view_all"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/selector_button_background_orange"
        android:text="@string/view_all"
        android:textColor="@color/selector_white_alpha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_add"
        app:layout_constraintVertical_bias="0.137"
        app:layout_constraintWidth_percent="0.6" />

    <Button
        android:id="@+id/btn_view_mine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/selector_button_background_orange"
        android:text="@string/view_mine"
        android:textColor="@color/selector_white_alpha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_view_all"
        app:layout_constraintVertical_bias="0.174"
        app:layout_constraintWidth_percent="0.6" />

    <Button
        android:id="@+id/btn_view_random"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/selector_button_background_orange"
        android:text="@string/view_random"
        android:textColor="@color/selector_white_alpha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_view_mine"
        app:layout_constraintVertical_bias="0.215"
        app:layout_constraintWidth_percent="0.6" />


</androidx.constraintlayout.widget.ConstraintLayout>